---
import { Image } from "astro:assets";
import skIcon2 from "../../assets/images/common/sk_icon_2.jpg";

import ja from "../../locales/ja/translation.json";
import en from "../../locales/en/translation.json";
import ko from "../../locales/ko/translation.json";

const locales = { ja, en, ko };
const locale = (Astro.currentLocale as keyof typeof locales) || "ja";
const t = locales[locale];
---

<section class="py-7 md:py-12">
  <h2 class="section-title" data-animation="slideUp">service</h2>
  <p class="[--border-position:6rem] border-text mb-7 md:mb-20">
    <span data-animation="slideUp">{t.company.sub_title_service}</span>
  </p>
  <div class="bg-white py-7 md:py-24 px-4 md:px-20" data-animation="slideDown">
    <div
      class="grid grid-cols-2 [grid-template-rows:auto_auto] md:grid-cols-3 md:grid-rows-2 place-items-center md:place-items-start gap-y-4 md:gap-y-0 relative"
    >
      <Image
        src={skIcon2}
        alt=""
        class="col1 w-48 h-48 object-contain"
      />
      <div
        class="flex md:flex-row flex-col justify-center md:justify-start items-start md:items-center h-full grid-cols-2 gap-x-20 col2" 
      >
        <h3 class="text-2xl flex-shrink-0">{t.company.name_app}</h3>
      </div>
      <p
        class="col3 leading-loose text-sm md:text-base md:mb-auto mb-4 whitespace-pre-line"
      >
        {t.company.content_service}
      </p>
    </div>
  </div>
</section>

<style>
  /* Tailwind v4 でも動作するよう @apply を標準CSSプロパティに書き換えます */
  .col1 {
    @media (min-width: 768px) {
      grid-area: 1/1/3/2;
    }
  }
  .col2 {
    @media (min-width: 768px) {
      grid-area: 1/2/2/4;
    }
  }
  .col3 {
    grid-column: span 2 / span 2;
    @media (min-width: 768px) {
      grid-column: span 1 / span 1;
      grid-area: 2/2/3/4;
    }
  }
</style>